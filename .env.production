# ===============================================
# PRODUCTION ENVIRONMENT TEMPLATE
# ===============================================
# ИНСТРУКЦИИ ДЛЯ PRODUCTION ДЕПЛОЯ:
# 1. Скопируйте в .env на продакшн сервере
# 2. Замените все YOUR_* значения на реальные
# 3. Установите DEBUG=false для продакшн
# ===============================================

# KeyCRM интеграция
KEYCRM_API_TOKEN=YOUR_KEYCRM_API_TOKEN
KEYCRM_WEBHOOK_SECRET=YOUR_STRONG_WEBHOOK_SECRET

# Google Sheets
GSHEETS_ID=YOUR_GOOGLE_SHEETS_ID
GOOGLE_CREDENTIALS_JSON=YOUR_GOOGLE_CREDENTIALS_JSON

# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
TELEGRAM_ALLOWED_USERS=[YOUR_USER_ID]
TELEGRAM_ADMIN_USERS=[YOUR_USER_ID]

# Production Webhook (замените на ваш домен)
WEBHOOK_ENDPOINT=https://blanks.yourdomain.com/webhook/keycrm

# ===============================================
# PRODUCTION ПАРАМЕТРЫ
# ===============================================

# Планирование
LEAD_TIME_DAYS=14
SCRAP_PCT=0.05
TARGET_COVER_DAYS=14
MIN_STOCK_DEFAULT=100
PAR_STOCK_DEFAULT=300

# Система
TIMEZONE=Europe/Kyiv
USE_DEMAND_METRICS=false
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# ===============================================
# PRODUCTION БЕЗОПАСНОСТЬ
# ===============================================

# Логирование (production настройки)
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# SSL и безопасность
SSL_VERIFY=true
WEBHOOK_VERIFY_SSL=true

# Мониторинг
HEALTH_CHECK_INTERVAL=300
ALERT_THRESHOLD_HOURS=1