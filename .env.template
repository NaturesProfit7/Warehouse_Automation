# ===============================================
# WAREHOUSE AUTOMATION SYSTEM - ENVIRONMENT CONFIG
# ===============================================
# ИНСТРУКЦИИ:
# 1. Скопируйте этот файл в .env
# 2. Замените все значения на реальные
# 3. НИКОГДА НЕ КОММИТЬТЕ .env В GIT!
# ===============================================

# KeyCRM интеграция
# Получите токен в KeyCRM → Настройки → API
KEYCRM_API_TOKEN=your_keycrm_api_token_here
KEYCRM_WEBHOOK_SECRET=your_webhook_secret_key_here

# Google Sheets интеграция  
# Создайте Service Account в Google Cloud Console
GSHEETS_ID=your_google_sheets_id_here
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# Telegram бот
# Получите токен у @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ALLOWED_USERS=[123456789]
TELEGRAM_ADMIN_USERS=[123456789]

# Webhook endpoint (замените на ваш домен)
WEBHOOK_ENDPOINT=https://yourdomain.com/webhook/keycrm

# ===============================================
# ПАРАМЕТРЫ СИСТЕМЫ
# ===============================================

# Параметры планирования
LEAD_TIME_DAYS=14
SCRAP_PCT=0.05
TARGET_COVER_DAYS=14
MIN_STOCK_DEFAULT=100
PAR_STOCK_DEFAULT=300

# Временная зона
TIMEZONE=Europe/Kyiv

# Режим расчета (простой для MVP)
USE_DEMAND_METRICS=false

# Технические параметры
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# ===============================================
# PRODUCTION НАСТРОЙКИ
# ===============================================

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# Безопасность (для production)
SSL_VERIFY=true
WEBHOOK_VERIFY_SSL=true